<?xml version="1.0" encoding="utf-8"?>
    <layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.sections.RiskFactorActivity"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <data>

            <import type="android.view.View" />
            <variable
                name="callback"
                type="edu.aku.hassannaqvi.wellnessscale.ui.sections.RiskFactorActivity" />

            <variable
                name="familymembers"
                type="edu.aku.hassannaqvi.wellnessscale.models.FamilyMembers" />
        </data>
        <!-- CUSTOM TOOLBAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_bg_effect"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ToolbarTheme"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:subtitle="Risk Stratification"
                app:theme="@style/ActionBarTheme"
                app:title="@string/app_name"
                />
            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/secGrpA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fldGrpCVa103"
                        style="@style/cardView">
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/riskCategoryTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="Risk Category"
                                android:textSize="24sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/riskCategoryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{`Participant `+familymembers.getA103().toString()+` is categorized as:`}"
                                android:textSize="18sp"
                                android:textColor="#666666"
                                android:includeFontPadding="false"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/riskCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{familymembers.calculateRiskOutcome().toString()}"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:includeFontPadding="false"
                                android:gravity="center"/>

                            <LinearLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:radius="8dp"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtStroke"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:text="Stroke"
                                    android:paddingStart="24dp"
                                    android:includeFontPadding="false"

                                    android:paddingEnd="24dp"
                                    android:drawableEnd="@drawable/ic_data_entry"
                                    android:drawablePadding="32dp"
                                    android:background="@color/greenOverlay"
                                    android:gravity="start|center_vertical"/>

                                <TextView
                                    android:id="@+id/txtAngina"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:text="Angina"
                                    android:paddingStart="24dp"
                                    android:includeFontPadding="false"

                                    android:paddingEnd="24dp"
                                    android:drawableEnd="@drawable/ic_data_entry"
                                    android:drawablePadding="32dp"
                                    android:background="@color/greenOverlay"
                                    android:gravity="start|center_vertical"/>

                                <TextView
                                    android:id="@+id/txtHTN"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:text="Hypertension"
                                    android:paddingStart="24dp"
                                    android:includeFontPadding="false"
                                    android:paddingEnd="24dp"
                                    android:drawableEnd="@drawable/ic_data_entry"
                                    android:drawablePadding="32dp"
                                    android:background="@color/greenOverlay"
                                    android:gravity="start|center_vertical"/>
                                <TextView
                                    android:id="@+id/txtDM"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:text="Diabetes"
                                    android:paddingStart="24dp"
                                    android:paddingEnd="24dp"
                                    android:includeFontPadding="false"
                                    android:drawableEnd="@drawable/ic_data_entry"
                                    android:drawablePadding="32dp"
                                    android:background="@color/greenOverlay"
                                    android:gravity="start|center_vertical"/>

                                <TextView
                                    android:id="@+id/txtMH"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:text="Mental Health"
                                    android:paddingStart="24dp"
                                    android:paddingEnd="24dp"
                                    android:drawableEnd="@drawable/ic_data_entry"
                                    android:includeFontPadding="false"
                                    android:drawablePadding="32dp"
                                    android:background="@color/greenOverlay"
                                    android:gravity="start|center_vertical"/>

                            </LinearLayout>



                            <TextView
                                android:id="@+id/riskDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Here's some information about this risk category and steps you can suggest to manage it."
                                android:textSize="16sp"
                                android:background="@color/adolMaleBg"
                                android:gravity="center"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_marginBottom="56dp"
    android:layout_height="0dp">

                            <TextView
                                android:id="@+id/lifeStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="\n• Bad diet
\n•	Tobacco use
\n•	Sedentary Lifestyle
"
                                android:textSize="14sp"
                                android:textColor="#777777"
                                />
                        </ScrollView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
android:layout_alignParentBottom="true"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <Button
                        android:id="@+id/btn_End"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:onClick="@{() -> callback.btnEnd()}"
                        android:text="Cancel"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_Continue"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/capsule"
                        android:backgroundTint="@color/colorAccent"
                        android:backgroundTintMode="src_atop"
                        android:onClick="@{() -> callback.btnContinue()}"
                        android:text="Continue"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </layout>