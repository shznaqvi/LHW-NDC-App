<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.wellnessscale.ui.lists.FamilyMembersListActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layoutDirection="ltr"
        android:textDirection="ltr"
        android:background="@drawable/app_bg_effect"
        android:orientation="vertical">


        <!--        &lt;!&ndash; CUSTOM TOOLBAR &ndash;&gt;
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="@style/ToolbarTheme"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
                    app:titleTextAppearance="@style/Toolbar.TitleText" />-->

        <RelativeLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:background="@drawable/top_round_shape"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="56dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grayLight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayLight"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalMember"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="8dp"
                        android:fontFamily="@font/open_sans_condensed_light"
                        android:textColor="@color/white"
                        android:background="@color/colorAccentLightOverlay"
                        android:text="TEXT"
                        android:textSize="11dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />


                    <TextView
                        android:id="@+id/compForms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="8dp"
                        android:textSize="11dp"
                        android:fontFamily="@font/open_sans_condensed_light"
                        android:textColor="@color/white"
                        android:background="@color/colorAccentLightOverlay"
                        android:text="TEXT"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

                    <TextView
                        android:id="@+id/incompForms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="8dp"
                        android:text="TEXT"
                        android:fontFamily="@font/open_sans_condensed_light"
                        android:textColor="@color/white"
                        android:background="@color/colorAccentLightOverlay"
                        android:textSize="11dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

                    <TextView
                        android:id="@+id/totalMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:text="TEXT"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grayLight"

                    android:padding="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_mwra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="56dp"
                    tools:itemCount="11"
                    tools:listitem="@layout/famlily_member_row" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignStart="@+id/fmHeading"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="-16dp"
                    android:elevation="8dp"
                    android:src="@drawable/wellness_health_care" />

                <TextView
                    android:id="@+id/fmHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/capsule"
                    android:elevation="1dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal|center_vertical"
                    android:minHeight="56dp"
                    android:radius="10dp"
                    android:text="FAMILY MEMBERS"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/fmHeading"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="6dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_person_add"
                    app:borderWidth="0dp"
                    app:elevation="6dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="56dp"
                android:background="@color/whiteOverlay"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:elevation="50dp">


                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_shape_red"
                    android:drawableTint="#ea0000"
                    android:onClick="btnEnd"
                    android:text="Cancel"
                    android:textColor="@color/white" />

    <!--            <Button

                    android:id="@+id/btn_Rand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_shape_red"
                    android:backgroundTint="@color/girl_pink"
                    android:backgroundTintMode="screen"
                    android:drawableTint="#eaea00"
                    android:elevation="12dp"
                    android:onClick="btnRand"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:shadowColor="@color/redDark"
                    android:text="Select Indexed Mother"
                    android:textColor="@color/white"
                    android:visibility="invisible" />-->

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_shape_green"
                    android:drawableTint="#00ea00"
                    android:enabled="false"
                    android:onClick="btnContinue"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Continue"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    tools:visibility="visible" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</layout>